<body>
    <div id="container">

        <div id=container>
            <!-- CABEÇALHO -->
            <header>
                <div class="container">
                    <img src="~/Resources/img/logo.png" />
                    <div class="header-right">
                        <a href="~/index.cshtml">Início</a>
