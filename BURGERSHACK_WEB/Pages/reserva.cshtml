<body>
    <div id="container">

        <div id=container>
            <!-- CABEÇALHO -->
            <header>
                <div class="container">
                    <img src="~/Resources/img/logo.png" />
                    <div class="header-right">
                        <a href="~/index.cshtml">Início</a>
                        <a href="~/index.cshtml#catalogo">Catálogo</a>
                        <a href="~/index.cshtml#sobre">Sobre</a>
                        <a class="active" href="~/Pages/acessar.cshtml">Acessar</a>
                    </div>
                </div>
            </header>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6 col-centraliza">
                    <h3 class="text-center">Nova Reserva</h3>
                    <div class="row">
                        <form role="form" class="form-inline">
                            <div class="form-group">
                                <input type="text" class="form-control" id="inputReservaCPF" placeholder="Confirme seu CPF">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="inputReservaQuantidade" placeholder="Quantidade de Pessoas">
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <form role="form" class="form-inline">
                            <div class="form-group">
                                <input type="text" class="form-control" id="inputReservaCPF" placeholder="DD/MM/AAAA">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="inputReservaQuantidade" placeholder="HH:MM">
                            </div>
                            <div class="form-group" style="margin-right: 0px;">
                                <label style="width:100px;">
                                    <!--
                                    <button type="submit" class="btn btn-default" style="margin-left: 0px">Verificar</button>
                                     -->
                                </label>
                            </div>
                        </form>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" style="border-radius: 10px" id="textareaReservaInformacoes" rows="3" placeholder="Informações da reserva. (Ex: 2 cadeiras de crianças, lugar acessível para cadeirante etc..)"></textarea>
                    </div>
                    <a href="~/Pages/perfil.cshtml">
                        <button type="submit" class="btn btn-default" style="width: 100%; margin: 0px;">Realizar Reserva</button>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- RODAPÉ -->
