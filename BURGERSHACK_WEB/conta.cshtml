@using BurgerShack.Web.Bll;
@using BurgerShack.Common;

@{
    ClienteBLL clienteBLL = new ClienteBLL();
    clnCliente objCliente = new clnCliente();

    string resultado = "";
    string reservasTabela = "";

    if (!clienteBLL.autenticado())
    {
        Response.Redirect("acessar.cshtml");
    }
    else
    {
        if (Request.HttpMethod == "POST")
        {
            string nome = Request.Form["txtNome"];
            string senha = Request.Form["txtSenha"];
            string celular = Request.Form["txtCelular"];
            string cartaoNumero = Request.Form["txtCartaoNumero"];
            string cartaoValidade = Request.Form["txtCartaoValidade"];
            string cartaoCVV = Request.Form["txtCartaoCVV"];

            resultado = clienteBLL.alterar(nome, senha, celular, cartaoNumero, cartaoValidade, cartaoCVV);
        }

        objCliente = clienteBLL.obterCliente();

        ReservaBLL reservaBLL = new ReservaBLL();

        reservasTabela = reservaBLL.exibirReservas();
    }
}
<!DOCTYPE html>
<html lang=pt-br>
<head>
    <title>@BurgerShack.Common.App.Name - Minha Conta</title>
    <meta charset=UTF-8> <!-- ISO-8859-1 -->
    <meta name=viewport content="width=device-width, initial-scale=1.0"> <!-- Para não travar o zoom -->
    <meta name=description content=""> <!-- No máximo 360 caracteres, pode haver falhas com mais de 160 caracteres-->
    <meta name=keywords content=""> <!-- Opcional -->
    <meta name=author content="Caio Silva and vitorrdgs">
    <meta name=application-name content="@BurgerShack.Common.App.Name">
    <link rel="shortcut icon" href="~/Resources/img/favicon.png" type="image/x-icon">

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" type="text/css" href="~/Resources/css/bootstrap.min.css">

    <!-- Telas Responsivas -->
    <link rel="stylesheet" type="text/css" href="~/Resources/css/default.css">
    <link rel=stylesheet media="screen and (max-width:480px)" href="~/Resources/css/style480.css">
    <link rel=stylesheet media="screen and (min-width:481px) and (max-width:768px)" href="~/Resources/css/style768.css">
    <link rel=stylesheet media="screen and (min-width:769px) and (max-width:1024px)" href="~/Resources/css/style1024.css">
    <link rel=stylesheet media="screen and (min-width:1025px)" href="~/Resources/css/style1025.css">

    <!-- OUTROS COMPONENTES-->
    <link rel="stylesheet" type="text/css" href="~/Resources/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/Resources/css/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/Resources/css/nprogress.css" />
</head>
<body>
    <!-- CABEÇALHO -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="index.cshtml#">
                    <img class="navbar-logo" src="~/Resources/img/logo.png" alt="Logo do @BurgerShack.Common.App.Name">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="index.cshtml#"><i class="fas fa-home"></i> Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="index.cshtml#catalogo"><i class="fas fa-bars"></i> Catálogo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="index.cshtml#feedback"><i class="fas fa-smile"></i> Feedback</a>
                        </li>
                        @{
                            if (clienteBLL.autenticado())
                            {
                                <li class="nav-item active">
                                    <a class="nav-link" href="~/conta.cshtml"><i class="fas fa-user-alt"></i> Minha Conta</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item active">
                                    <a class="nav-link" href="~/acessar.cshtml"><i class="fas fa-sign-in-alt"></i> Acessar</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTEUDO -->
    <section id="conta">
        <h2>Minha Conta</h2>
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-12 col-centraliza">
                    <h3>Meus Dados</h3>
                    <form class="form" role="form" action="~/conta.cshtml" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="txtNome" placeholder="Nome Completo" required value="@(Request.Form["txtNome"] == null ? objCliente.Nome : Request.Form["txtNome"])" />
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="E-mail" required disabled value="@objCliente.Email" />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <input type="password" class="form-control" name="txtSenha" placeholder="Senha" />
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="CPF" data-mask="000.000.000-00" required disabled value="@objCliente.Cpf" />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="txtCelular" placeholder="Telefone Celular" data-mask="(00) 00000-0000" required value="@(Request.Form["txtCelular"] == null ? objCliente.TelCelular : Request.Form["txtCelular"])" />
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="txtCartaoNumero" placeholder="Número do Cartão" data-mask="0000 0000 0000 0000" required value="@(Request.Form["txtCartaoNumero"] == null ? objCliente.CartaoNumero : Request.Form["txtCartaoNumero"])" />
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-row">
                                    <div class="col">
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="txtCartaoValidade" placeholder="Data de Validade" data-mask="00/00" required value="@(Request.Form["txtCartaoValidade"] == null ? objCliente.CartaoValidade : Request.Form["txtCartaoValidade"])" />
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="txtCartaoCVV" placeholder="CVV" data-mask="000" required value="@(Request.Form["txtCartaoCVV"] == null ? objCliente.CartaoCVV : Request.Form["txtCartaoCVV"])" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a href="~/acessar.cshtml?acao=sair" role="button" class="btn btn-primary float-left"><i class="fas fa-sign-out-alt"></i> Sair</a>
                        <button type="submit" class="btn btn-default float-right"><i class="fas fa-exchange-alt"></i> Alterar</button>
                    </form>
                </div>
                <div class="col-lg-6 col-md-8 col-sm-12 col-centraliza">
                    <h3>Reservas</h3>
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">Data</th>
                                <th scope="col">Lugares</th>
                                <th scope="col">Situação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @Html.Raw(@reservasTabela)
                        </tbody>
                    </table>
                    <a href="~/reserva.cshtml" class="btn btn-primary" role="button"><i class="fas fa-thumbtack"></i> Nova Reserva</a>
                </div>
            </div>
        </div>
    </section>

    <!-- RODAPÉ -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-4">
                    <h5>Sobre o @BurgerShack.Common.App.Name</h5>
                    <p>O @BurgerShack.Common.App.Name é uma hamburgueria localizada no centro comercial de Alphaville, possuimos mesas para consumo, onde é possível realizar sua reserva por meio do telefone, website ou de nosso aplicativo.</p>
                </div>
                <div class="col-sm-12 col-md-4">
                    <h5>Contatos</h5>
                    <p><a href="fb.me/@BurgerShack.Common.App.Name"><i class="fab fa-facebook-square"></i> facebook.com/@BurgerShack.Common.App.Name</a></p>
                    <p><a href="http://api.whatsapp.com/send?phone=551149985255"><i class="fas fa-phone"></i> (11) 4998-5255</a></p>
                    <p><a href="malito:@BurgerShack.Common.App.EmailClient.CredentialEmail"><i class="fas fa-envelope"></i> @BurgerShack.Common.App.EmailClient.CredentialEmail</a></p>
                    <p><a href="https://goo.gl/maps/UNELiYGVo932"><i class="fas fa-location-arrow"></i> Calçada dos Lírios, 196 - Alphaville - Barueri</a></p>
                </div>
                <div class="col-sm-12 col-md-4">
                    <h5>Localização</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3659.002715489375!2d-46.85149998502341!3d-23.496411684715152!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94cf023ca8364ffb%3A0x94549a2e18bfe648!2sCal%C3%A7ada+dos+L%C3%ADrios%2C+196+-+Alphaville+Comercial%2C+Barueri+-+SP%2C+06453-034!5e0!3m2!1spt-BR!2sbr!4v1541470650518" width="100%" height="200" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript-->
    <script type="text/javascript" src="~/Resources/js/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/Resources/js/popper.min.js"></script>
    <script type="text/javascript" src="~/Resources/js/nprogress.js"></script>
    <script type="text/javascript" src="~/Resources/js/sweetalert2.all.min.js"></script>
    <script type="text/javascript" src="~/Resources/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Resources/js/jquery.mask.min.js"></script>
    <script type="text/javascript" src="~/Resources/js/script.js"></script>
    @{
        if (!String.IsNullOrEmpty(resultado))
        {
            if (resultado.StartsWith("1"))
            {
                <script type="text/javascript">
                    swal({
                        title: 'Tudo certo!',
                        html: '@Html.Raw(resultado.Substring(1, resultado.Length - 1).Replace(".", ".<br/>"))',
                        type: 'success'
                    });
                </script>
            }
            else
            {
                <script type="text/javascript">
                    swal({
                        title: 'Ops...',
                        html: '@Html.Raw(resultado.Substring(1, resultado.Length - 1).Replace(".", ".<br/>"))',
                        type: 'error'
                    });
                </script>
            }

        }
    }
</body>
</html>