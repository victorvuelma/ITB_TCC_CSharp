@using BurgerShack.Web.Bll;


@{
    ProdutoBLL produtoBLL = new ProdutoBLL();

    String listaHtml = produtoBLL.listarProdutos(produtoBLL.obterTodos());
}
<!DOCTYPE html>
<html lang=pt-br>
<head>
    <title>BurgerShack</title>
    <meta charset=UTF-8> <!-- ISO-8859-1 -->
    <meta name=viewport content="width=device-width, initial-scale=1.0"> <!-- Para não travar o zoom -->
    <meta name=description content=""> <!-- No máximo 360 caracteres, pode haver falhas com mais de 160 caracteres-->
    <meta name=keywords content=""> <!-- Opcional -->
    <meta name=author content="Caio Silva and vitorrdgs">
    <meta name=application-name content="BurgerShack">
    <!-- favicon, ícone que será exibido no navegador. Resolução: 8x8 - 16x16 - 32x32px com extensão .ico -->
    <link rel="shortcut icon" href="~/Resources/img/favicon.png" type="image/x-icon">

    <!-- BOOTSTRAP -->
    <link rel="stylesheet" type="text/css" href="~/Resources/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Resources/css/fontawesome.min.css" />

    <!-- Telas Responsivas -->
    <link rel="stylesheet" type="text/css" href="~/Resources/css/default.css">
    <link rel=stylesheet media="screen and (max-width:480px)" href="~/Resources/css/style480.css">
    <link rel=stylesheet media="screen and (min-width:481px) and (max-width:768px)" href="~/Resources/css/style768.css">
    <link rel=stylesheet media="screen and (min-width:769px) and (max-width:1024px)" href="~/Resources/css/style1024.css">
    <link rel=stylesheet media="screen and (min-width:1025px)" href="~/Resources/css/style1025.css">
</head>
<body>
    <!-- CABEÇALHO -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img class="navbar-logo" src="~/Resources/img/logo.png" alt="Logo do BurgerShack">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#"><i class="fas fa-home"></i> Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#catalogo"><i class="fas fa-bars"></i> Catálogo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#sobre"><i class="fas fa-info"></i> Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/acessar.cshtml"><i class="fas fa-sign-in-alt"></i> Acessar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- SLIDES -->
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Resources/img/slider/slider-1.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Resources/img/slider/slider-1.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Resources/img/slider/slider-1.png" alt="">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Retroceder</span>
            </a>
            <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Avançar</span>
            </a>
        </div>
    </header>

    <!-- GRID DE PRODUTOS -->
    <section id="catalogo">
        <h2>Catálogo</h2>
        <div class="container">
            <div class="row">
                @Html.Raw(listaHtml)                
            </div>
    </section>

    <!-- FEEDBACK SEND-->
    <section id="feedback-send">
        <h2>Deixe seu Feedback <i class="fas fa-smile"></i></h2>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-lg-6 col-sm-12 col-center">
                    <form>
                        <div class="form-group">
                            <input type="text" class="form-control" id="inputFeedbackNome" placeholder="Primeiro Nome" required />
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="inputFeedbackEmail" placeholder="Email" aria-describedby="emailHelp" required />
                            <small id="emailHelp" class="form-text text-muted">Nós nunca vamos compartilhar seu e-mail com ninguém.</small>
                        </div>
                        <div class="form-group">
                            <textarea class="w-100 form-control" id="inputFeedbackText" rows="3" placeholder="Deixe seu feedback" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-paper-plane"></i> Enviar</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- RODAPÉ -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-4">
                    <h5>Sobre o Burger Shack</h5>
                    <p>O Burguer Shack é um ambiente de refeição, temos promoções e eventos com frequêcia, há um local para comer no local, podendo reservar mesas atráves do aplicativo, web e por telefone</p>
                </div>
                <div class="col-sm-12 col-md-4">
                    <h5>Contatos</h5>
                    <p><i class="fab fa-facebook-square"></i> facebook.com/burguershack</p>
                    <p><i class="fas fa-phone"></i> (11) 4998-5255</p>
                    <p><i class="fas fa-envelope"></i> sac@burgershack.com</p>
                    <p><i class="fas fa-location-arrow"></i> Avenida Pompéia nº 50, São Paulo - SP</p>
                </div>
                <div class="col-sm-12 col-md-4">
                    <h5>Localização</h5>
                    <img src="~/Resources/img/mapa.png" alt="Nossa Localização" class="img-thumbnail img-responsive">
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript-->
    <script src="~/Resources/js/jquery-3.2.1.min.js"></script>
    <script src="~/Resources/js/jquery.mask.min.js"></script>
    <script src="~/Resources/js/popper.min.js"></script>
    <script src="~/Resources/js/bootstrap.min.js"></script>
    <script src="~/Resources/js/script.js"></script>
</body>
</html>