    <meta name=description content=""> <!-- No máximo 360 caracteres, pode haver falhas com mais de 160 caracteres-->
    <meta name=keywords content=""> <!-- Opcional -->
    <meta name=author content="Caio Silva and vitorrdgs">
    <meta name=application-name content="BurgerShack">
    <!-- favicon, ícone que será exibido no navegador. Resolução: 8x8 - 16x16 - 32x32px com extensão .ico -->
    <link rel="shortcut icon" href="~/Resources/img/favicon.png" type="image/x-icon">
    <!-- CSS PADRÃO -->
    <link rel="stylesheet" type="text/css" href="~/Resources/css/default.css">
    <link rel="stylesheet" type="text/css" href="~/Resources/css/media-queries.css">
    <link rel="stylesheet" type="text/css" href="~/Resources/css/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Resources/css/bootstrap/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Resources/css/all.min.css" />

    <!-- Telas Responsivas -->
    <link rel=stylesheet media="screen and (max-width:480px)" href="~/Resources/css/style480.css">
    <link rel=stylesheet media="screen and (min-width:481px) and (max-width:768px)" href="~/Resources/css/style768.css">
    <link rel=stylesheet media="screen and (min-width:769px) and (max-width:1024px)" href="~/Resources/css/style1024.css">
    <link rel=stylesheet media="screen and (min-width:1025px)" href="~/Resources/css/style1025.css">

    <!-- Bootstrap-->
    <script src="~/Resources/js/jquery-3.2.1.min.js"></script>
    <script src="~/Resources/js/popper.min.js"></script>
    <script src="~/Resources/js/bootstrap/bootstrap.min.js"></script>
</head>
<body>

    <!-- CABEÇALHO -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="~/index.cshtml">
                    <img class="navbar-logo" src="~/Resources/img/logo.png" alt="Logo do BurgerShack">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="~/index.cshtml"><i class="fa fa-home"></i> Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/index.cshtml#catalogo"><i class="fa fa-bars"></i> Catálogo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/index.cshtml#sobre"><i class="fa fa-info"></i> Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/acessar.cshtml"><i class="fa fa-sign-in-alt"></i> Acessar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- CONTEUDO -->
    <section>
        <h2>Nova Reserva</h2>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-center">
                    <div class="row">
                        <form role="form" class="form-inline">
                            <div class="form-group">
                                <input type="text" class="form-control" id="inputReservaCPF" placeholder="Confirme seu CPF">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="inputReservaQuantidade" placeholder="Quantidade de Pessoas">
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <form role="form" class="form-inline">
                            <div class="form-group">
                                <input type="text" class="form-control" id="inputReservaCPF" placeholder="DD/MM/AAAA">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="inputReservaQuantidade" placeholder="HH:MM">
                            </div>
                            <div class="form-group" style="margin-right: 0px;">
                                <label style="width:100px;">
                                    <!--
                                    <button type="submit" class="btn btn-default" style="margin-left: 0px">Verificar</button>
                                     -->
                                </label>
                            </div>
                        </form>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" id="textareaReservaInformacoes" rows="3" placeholder="Informações da reserva. (Ex: 2 cadeiras de crianças, lugar acessível para cadeirante etc..)"></textarea>
                    </div>
                    <a href="~/perfil.cshtml">
                        <button type="submit" class="btn btn-default btn-block">Realizar Reserva</button>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- RODAPÉ -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-4">
                    <h5>Sobre o Burger Shack</h5>
                    <p>O Burguer Shack é um ambiente de refeição, temos promoções e eventos com frequêcia, há um local para comer no local, podendo reservar mesas atráves do aplicativo, web e por telefone</p>
                </div>
                <div class="col-sm-12 col-md-4">
                    <h5>Contatos</h5>
                    <p><i class="fa fa-facebook-square"></i> facebook.com/burguershack</p>
                    <p><i class="fa fa-phone"></i> (11) 4998-5255</p>
                    <p><i class="fa fa-envelope"></i> sac@burgershack.com</p>
                    <p><i class="fa fa-location-arrow"></i> Avenida Pompéia nº 50, São Paulo - SP</p>
                </div>
                <div class="col-sm-12 col-md-4">
                    <h5>Localização</h5>
                    <img src="~/Resources/img/mapa.png" alt="Nossa Localização" class="img-thumbnail img-responsive">
                </div>
            </div>
        </div>
    </footer>
